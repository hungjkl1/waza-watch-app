<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductsDetailActivity">

    <RelativeLayout
        android:id="@+id/menuBar"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/dark_green"
        android:splitMotionEvents="false">


        <ImageButton
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_btn_menu_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/dark_green"
            android:paddingLeft="@dimen/home_btn_menu_padding"
            android:paddingTop="@dimen/home_btn_menu_padding"
            android:paddingBottom="@dimen/home_btn_menu_padding"
            app:srcCompat="@drawable/ic_shopping_cart_black_24dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Product Detail"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <!--BUTTON BACK-->
        <ImageButton
            android:id="@+id/back"
            android:background="@null"
            android:src="@drawable/btn_back"
            android:scaleType="fitCenter"
            android:paddingLeft="10dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image_details"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/product_name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Product Name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/product_price_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text=" Price: 450.000 VND"
                android:textColor="#f20"
                android:layout_margin="5dp"
                />
            <!--khung chọn số lượng-->
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_btn"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/product_price_details"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="6dp"
                android:layout_gravity="center"
                app:finalNumber="10"
                app:initialNumber="1"
                app:textSize="13dp">
            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            <Button
                android:id="@+id/pd_add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Cart"
                android:layout_gravity="center"
                android:background="@color/dark_green"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_marginLeft="10dp"
            android:textColor="@color/greenLight"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/product_description_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:textSize="23sp" />


    </LinearLayout>

</LinearLayout>